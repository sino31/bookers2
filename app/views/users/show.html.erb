<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    <div class="col-md-9">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <% @books.each do |book| %>
          <tr>
            <td>
                <%= link_to user_path(@user) do %>
                    <%= image_tag @user.get_profile_image(10,10) %>
                <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>