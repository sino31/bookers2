<head>
    <script src="https://kit.fontawesome.com/3ad5b77e75.js" crossorigin="anonymous"></script>
</head>
<body>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <%= render 'new_book', book: @newbook %>
      </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
                </br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "Are you sure？"}, class:"btn btn-danger" %></td>
              <% end %>
              <% if @book.favorited_by?(current_user) %>
                <td>
                  <%= link_to book_favorites_path(@book), method: :delete, style: "color:red" do %>
                    <i class="fas fa-heart"></i> <%= @book.favorites.count %>
                  <% end %>
                </td>
              <% else %>
                <td>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    <i class="far fa-heart"></i> <%= @book.favorites.count %>
                  <% end %>
                </td>
              <% end %>
              <td><%= @book.book_comments.count %> Comment</td>
            </tr>
          </table>
          <div class="ml-2">
            <% @book.book_comments.each do |book_comment| %>
              <p>
                <%= image_tag book_comment.user.get_profile_image(70,70) %>　
                <%= book_comment.comment %>　
                <% if book_comment.user == current_user %>
                  <%= link_to "Delete", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-outline-danger btn-sm" %>
                <% end %> </br>
                <%= book_comment.user.name %>
              </p>
            <% end %>
          </div>
          <div class="ml-2">
            <%= form_with model: [@book, @book_comment] do |f| %>
              <%= f.text_area :comment, rows: '5', cols: '80', placeholder: "Add comment" %>
              <div class="form-group">
                <%= f.submit 'Post', class: "btn btn-outline-secondary btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</body>