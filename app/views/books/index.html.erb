<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render 'new_book', book: @book %>
    </div>
      <div class="col-md-9">
          <h2>Books</h2>
            <table>
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %> 
                  <tr>
                    <td><%= image_tag 'no_image.jpeg' %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
      </div>
    </div>
</div>
